{
  "pluginAlias": "AmbientWeatherSensors",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Ambient Weather plug-in for [Homebridge](https://github.com/peledies/homebridge-ambient-weather-sensors) using the HTTP Rest API",
  "footerDisplay": "[Ambient Weather Dashboard](https://ambientweather.net/dashboard)",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "AmbientWeatherSensors",
        "description": "The name that will appear in your homebridge log"
      },
      "apiKey": {
        "title": "API Key",
        "type": "string",
        "required": true,
        "placeholder": "api key from ambient weather account"
      },
      "applicationKey": {
        "title": "Application Key",
        "type": "string",
        "required": true,
        "placeholder": "application key from ambient weather account"
      },
      "temperatureSensors": {
        "title": "Temperature Sensors",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "humiditySensors": {
        "title": "Humidity Sensors",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "solarRadiationSensors": {
        "title": "Solar Radiation Sensors",
        "type": "boolean",
        "required": false,
        "default": false
      }
    }
  }
}
